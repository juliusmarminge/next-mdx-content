{
  "name": "next-mdx-content",
  "description": "Easy import and validation of MDX files in your Next.js project",
  "version": "0.0.1",
  "keywords": [
    "nextjs",
    "mdx",
    "markdown",
    "next.js",
    "rsc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/juliusmarminge/next-mdx-content",
    "directory": "packages/nextjs"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ignore-path ../../.gitignore",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "next": "^13.2.4",
    "@next/mdx": "^13.2.4",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "next": "^13.2.4",
    "@next/mdx": "^13.2.4",
    "eslint": "^8.31.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.2.3",
    "typescript": "^4.9.4",
    "zod": "^3.20.2"
  }
}
